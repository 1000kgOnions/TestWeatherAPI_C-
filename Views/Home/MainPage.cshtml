            </div>
        </div>
        <div class="row">
            @{
                int i = 0;
                foreach (var item in Model)
                {
                    i++;
                    <div class="col-md-4">
                        <div class="productbox">
                            <div class="fadeshop">
                                <div class="captionshop text-center" style="display: none;">
                                    <h3>Thông tin khóa học</h3>
                                    <p>
                                        @item.TomTat
                                    </p>
                                    <p>
                                        @*<a href="@Url.Action("XemChiTiet","Home",new{IDKH=item.MaSP})">*@
